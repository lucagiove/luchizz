# TODO check other interesting curl options
# FIXME add pycurl timeout

import pycurl
import StringIO
import re
from optparse import OptionParser

parser = OptionParser()
parser.add_option("-i", "--interface", dest="device", default=None,
                  help="Specify the local interface, or ip address, you want"
                       "to use as outgoing network interface (ex: detectip -i"
                       "eth0)")
(options, args) = parser.parse_args()


def readip():
    # initialize the libcurl object and the string where to write the page
    curl = pycurl.Curl()
    page = StringIO.StringIO()
    if options.device:
        curl.setopt(pycurl.INTERFACE, options.device)
    curl.setopt(pycurl.URL, "http://ipinfo.io/ip")
    # return an error after 5 http redirection
    curl.setopt(pycurl.MAXREDIRS, 5)
    page = StringIO.StringIO()
    # define where the libcurl output will be written
    curl.setopt(pycurl.WRITEFUNCTION, page.write)
    # start the curl process and handle errors
    try:
        curl.perform()
        # extract the ip from the page
        ip = re.search('([\d]+\.[\d]+\.[\d]+\.[\d]+)', page.getvalue())
        ip = ip.group(0)
        return ip
    except pycurl.error:
        err = curl.errstr()
        print "ERROR: " + err

out = readip()
if out:
    print out
